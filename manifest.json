{
  "manifest_version": 3,
  "name": "GLWM: Get Locked-in With Me",
  "version": "1.0.0",
  "description": "Powered by Chromeâ€™s built-in AI, GLWM helps you stay focused while reading by visualizing and summarizing content.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["offscreen", "activeTab", "scripting", "contextMenus", "storage"],
  "host_permissions": ["http://*/*", "https://*/*", "<all_urls>"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["highlighter.js", "visualization-manager.js", "floating-toolbar.js", "comment-box.js", "content.js"],
      "css": ["content.css", "floating-toolbar.css", "comment-box.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.js", "overlay.css", "content.css", "highlighter.js", "visualization-manager.js", "floating-toolbar.js", "floating-toolbar.css", "comment-box.js", "comment-box.css", "views/*", "vendor/*", "prompts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-overlay": {
      "suggested_key": { "default": "Alt+S" },
      "description": "Toggle overlay"
    }
  },
  "action": {
    "default_title": "Open Overlay",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  }
}
