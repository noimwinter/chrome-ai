{
  "manifest_version": 3,
  "name": "Personal Summarizer",
  "version": "0.1.1",
  "description": "Personal Chrome Summarizer API demo.",
  "permissions": ["activeTab", "scripting", "contextMenus", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.js", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-overlay": {
      "suggested_key": { "default": "Alt+S" },
      "description": "Toggle overlay"
    }
  },
  "action": { "default_title": "Open Overlay" }
}